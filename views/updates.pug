doctype html
html
  head
    title Leonardo Mendes IWH I Practicum Update Object Form
  body
    h1 Update Custom Object Form
    form(action="/update-cobj" method="POST")
      label(for="name") Name:
      input(type="text" name="name" required)
      br
      label(for="bio") Bio:
      input(type="text" name="bio" required)
      br
      label(for="usage") Usage:
      input(type="text" name="usage" required)
      br
      button(type="submit") Submit
    br
    a(href="/") Return to the homepage
